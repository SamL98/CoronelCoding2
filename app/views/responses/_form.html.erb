<style>
  .ta {
    display: inline-block;
    border: 1px solid black;
    width: 40%;
    height: 150px;
    vertical-align: top;
    overflow-y: scroll;
    margin-bottom: 2.5%;
    margin-top: 2.5%;
  }
  #d-ta {
    margin-left: 5%;
    margin-right: 4.5%;
  }
  #r-ta {
    margin-right: 5%;
  }
  .f {
    margin-left: 3%;
    margin-right: 3%;
  }
  .a {
    margin-left: 3%;
    margin-bottom: 5%;
  }
</style>
<%= form_for(r, url: { action: 'update_res', params: { id: r.id } }, method: 'post', remote: true) do |f| %>
  <% if r.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(t.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% r.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !r.discussion.nil? %>
    <% r.discussion = r.discussion.gsub("Speaker", "<br/>Speaker") %>
    <% r.discussion = r.discussion.gsub("[typing]", "<br/>[typing]") %>
    <% r.discussion = r.discussion.gsub(/\[(\d{2}:\d{2}:\d{2})\]/) { |text| "<br/>" + text } %>
  <% end %>
  <% discussion = (r.discussion || "<br/>").html_safe %>
  <% response = r.response %>

  <div class="ta" id="d-ta">
  <p>
    <strong>Discussion:</strong>
    <%= discussion %>
  </p>
  </div>
  <div class="ta" id="r-ta">
  <p>
    <strong>Response</strong>
    <%= response %>
  </p>
  </div>

  <div class="field f">
    <%= f.radio_button :judgement, 1 %>
    <%= f.label :judgement, :value => 1 do %>
      <p>The issue position written was one endorsed by <b>this candidate</b></p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 2 %>
    <%= f.label :judgement, :value => 2 do %>
      <p>The issue position written was one endorsed by <b>another candidate</b> and that other candidate was the <b>same</b> party as this candidate</p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 3 %>
    <%= f.label :judgement, :value => 3 do %>
      <p>The issue position written was one endorsed by <b>another candidate</b> and that other candidate was the <b>opposite</b> party as this candidate</p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 4 %>
    <%= f.label :judgement, :value => 4 do %>
      <p>The issue position written was <b>not</b> endorsed by any of the 4 candidates and is a position that I would expect a politician of <b>this candidateâ€™s party</b> to endorse</p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 5 %>
    <%= f.label :judgement, :value => 5 do %>
      <p>The issue position written was <b>not</b> endorsed by any of the 4 candidates and is a position that I would expect a politician of <b>the opposite party</b> as this candidate to endorse</p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 6 %>
    <%= f.label :judgement, :value => 6 do %>
      <p>Unknown/needs to be looked at</p>
    <%end%>
  </div>
  <div class="field f">
    <%= f.radio_button :judgement, 7 %>
    <%= f.label :judgement, :value => 7 do %>
      <p>Does not seem to have finished typing</p>
    <%end%>
  </div>
  <div class="actions a">
    <%= f.submit %>
  </div>
<% end %>
